---
import BaseLayout from '../layouts/BaseLayout.astro';
const pageTitle = "Home Page";
---
<link rel="shortcut icon" href="./favicon.svg" type="image/svg+xml">


<BaseLayout pageTitle={pageTitle}>
 
  <main class="homepage_layout">

    <section class="home" id="home">
      <div class="home-content">
        <h1>Hi! It's<span> Daniela Moreno </span></h1>
        <h3 class="text-animation">I'm a <span></span></h3>
        <p>Digital Product & Motion Designer.</p>
      </div>
    </section>

  <section class="other-projects-container">
    <h3>Other projects</h3>
    <div class="cards_grid_layout_homepage">
          <figure class="figure_other_projects">
            <img
              src="assets/img/othe_projects/3d_letters.jpg"
              alt="White background with two 3D mobiles, featuring the titles 'Instagram New Feature' and 'Search Control' in black"
            />
          </figure>
        
          <figure class="figure_other_projects">
            <img src="/assets/img/othe_projects/metallic-X.jpg" alt="Baby pink background with three website mockups, featuring the title 'FBAUL Redesign' in dark pink" />
          </figure>

          <figure class="figure_other_projects">
            <img src="/assets/img/othe_projects/metallic-W.png" alt="Baby pink background with three website mockups, featuring the title 'FBAUL Redesign' in dark pink" />
          </figure>

          <figure class="figure_other_projects">
            <img src="/assets/img/othe_projects/agustd_album.jpg" alt="Baby pink background with three website mockups, featuring the title 'FBAUL Redesign' in dark pink" />
          </figure>
</div>
<main>
</BaseLayout>
