---
const { platform, username, icon } = Astro.props;
---

<a
  href={`https://${platform}.com/${username}`}
  target="_blank"
  rel="noopener noreferrer"
>
  <img src={icon} alt={`${platform} icon`} style="width: 24px; height: 24px;" />
</a>

<style>
  a {
    padding: 0.5rem 1rem;
    color: white;
    background-color: #ec008c;
    text-decoration: none;
    border-radius: 50px;
    display: inline-flex;
    align-items: center;
  }

  img {
    fill: white;
  }
</style>
